<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3"
        android:orientation="vertical"
        tools:context=".GPSPage.GpsActivity">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/closeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text="X"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/black"
                android:text="지도"/>
        </FrameLayout>

        <LinearLayout
            android:layout_weight = "1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="300dp"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/loadingGps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 로딩중입니다"
                android:textSize="20sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight = "1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="출퇴근 비콘 기기 목록"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/table_boarder"
                        android:textColor="#FFFFFF"
                        android:text="비콘 기기명" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_boarder"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="메이저 값"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/table_boarder"
                        android:textColor="#FFFFFF"
                        android:text="마이너 값" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/title1"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/major1"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/minor1"
                        android:text="" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/title2"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/major2"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:id="@+id/minor2"
                        android:text="" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:padding="3sp"
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:id="@+id/major3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:text="" />
                    <TextView
                        android:padding="3sp"
                        android:id="@+id/minor3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/row_boarder"
                        android:textColor="@color/black"
                        android:text="" />
                </TableRow>
            </TableLayout>
            <TextView
                android:id="@+id/loadingBea"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로딩중입니다."/>

        </LinearLayout>
    </LinearLayout>
</layout>